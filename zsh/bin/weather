#!/bin/bash

W_FILE="/Users/austinjones/.config/zsh/bin/weather.txt"

if [[ ! -f "$W_FILE" ]]; then
  ssh hollyw@73.113.23.66 "curl -s wttr.in" > $W_FILE
else
  F_DAY=$(stat -f "%Sm" $W_FILE | cut -d " " -f "1 2 4")
  TODAY=$(date | cut -d " " -f "2 3 6")

  [[ "$F_DAY" != "$TODAY" ]] &&
    ssh hollyw@73.113.23.66 "curl -s wttr.in" > $W_FILE
fi

[[ "$1" == "-s" ]] &&
  sed "13q;d" $W_FILE |
    gsed 's/\x1b\[[0-9;]*m//g' |
    sed "s/[[:punct:]]F* */ /g; s/\(-*[0-9]*[0-9]\)/\1 /g" |
    tr -s ' ' '\n' |
    sort |
    sed -n -e '2p;$p' |
    tr '\n' '-' |
    sed 's/-$//g' ||
  tail -n 32 $W_FILE
