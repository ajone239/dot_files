source $ZSH_PATH/git-prompt.sh

autoload -Uz vcs_info
precmd_vcs_info() { vcs_info }
precmd_functions+=( precmd_vcs_info )
setopt prompt_subst

# Color shortcuts
  export RED='%{[0;31m%}'
  export LIGHTRED='%{[1;31m%}'

  export GREEN='%{[0;32m%}'
  export LIGHTGREEN='%{[1;32m%}'

  export YELLOW='%{[0;33m%}'
  export LIGHTYELLOW='%{[1;33m%}'

  export BLUE='%{[0;34m%}'
  export LIGHTBLUE='%{[1;34m%}'

  export PURPLE='%{[0;35m%}'
  export LIGHTPURPLE='%{[1;35m%}'

  export CYAN='%{[0;36m%}'
  export LIGHTCYAN='%{[1;36m%}'

  export GRAY='%{[1;30m%}'
  export LIGHTGRAY='%{[0;37m%}'

  export NOCOLOR='%{[0m%}'

  export ARED='[0;31m'
  export ANOCOLOR='[0;0m'
  export AGREEN='[0;32m'
  export ABLUE='[0;34m'
  export ACYAN='[0;36'
  export APURPLE='[0;35m'


# PREV="$LIGHTGRAY<$BLUE%n(Î»)$LIGHTGRAY::$RED%1~$NOCOLOR"
PREV="$LIGHTGRAY<$CYAN(Î»)$LIGHTGRAY::$RED%1~$NOCOLOR"
POST="$LIGHTGRAY>%(?.$GREEN.$LIGHTRED) $ $NOCOLOR"

RPROMPT="$GRAY<-[$GREEN%T$GRAY::$CYAN%D$GRAY]$NOCOLOR"
precmd () { __git_ps1 $PREV $POST " |%s| " }

export PROMPT
export RPROMPT
